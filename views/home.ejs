<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Social - Feed</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    
    body {
      font-family: 'Poppins', sans-serif;
    }
    
    .gradient-bg {
      background-color: #eef2f7;
      background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.08'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }
    
    .btn-primary {
      transition: all 0.2s ease;
      background-color: #4d9de0;
      border-radius: 12px;
      border: none;
      box-shadow: 0 4px 0 #3d7db2;
      position: relative;
      top: 0;
    }
    
    .btn-primary:hover {
      top: -2px;
      box-shadow: 0 6px 0 #3d7db2;
    }
    
    .btn-primary:active {
      top: 2px;
      box-shadow: 0 2px 0 #3d7db2;
    }
    
    .btn-danger {
      transition: all 0.2s ease;
      background-color: #E95F71;
      border-radius: 12px;
      border: none;
      box-shadow: 0 4px 0 #C64B5B;
      position: relative;
      top: 0;
    }
    
    .btn-danger:hover {
      top: -2px;
      box-shadow: 0 6px 0 #C64B5B;
    }
    
    .btn-danger:active {
      top: 2px;
      box-shadow: 0 2px 0 #C64B5B;
    }
    
    .card {
      background-color: white;
      border-radius: 20px;
      border: 2px solid #4d9de0;
      box-shadow: 6px 6px 0 rgba(77, 157, 224, 0.3);
      transition: all 0.2s ease;
    }
    
    .card:hover {
      transform: translateY(-3px);
      box-shadow: 8px 8px 0 rgba(77, 157, 224, 0.4);
    }
    
    .post-appear {
      animation: fadeInUp 0.4s ease-out forwards;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .like-button {
      transition: all 0.2s ease;
    }
    
    .like-button:hover {
      transform: scale(1.1);
    }
    
    .like-count {
      transition: all 0.2s ease;
    }
  </style>
</head>
<body class="gradient-bg min-h-screen text-gray-800 p-6">
  <div class="max-w-4xl mx-auto animate__animated animate__fadeIn">
    <div class="flex justify-between items-center mb-8 p-4 animate__animated animate__slideInDown">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-800">
        Mini Social Feed
      </h1>
      <div class="flex space-x-3">
        <a href="/profile" class="btn-primary px-6 py-2 text-white font-medium animate__animated animate__fadeIn">Profile</a>
        <a href="/logout" class="btn-danger px-6 py-2 text-white font-medium animate__animated animate__fadeIn animate__faster">Logout</a>
      </div>
    </div>
    
    <div class="posts space-y-6">
      <% posts.forEach(function(post, index) { %>
        <div class="card p-6 post-appear">
          <div class="flex items-center mb-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold text-lg">
              <%= post.user.username.charAt(0).toUpperCase() %>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-700">@<%= post.user.username %></h3>
            </div>
          </div>
          
          <p class="text-gray-700 text-lg mb-5 leading-relaxed"><%= post.content %></p>
          
          <div class="flex items-center justify-between mt-3 pt-3 border-t border-gray-200">
            <div class="flex items-center space-x-2">
              <span class="like-count bg-blue-100 text-blue-800 px-4 py-1 rounded-full text-sm font-medium">
                <%= post.like.length %> likes
              </span>
            </div>
            <a href="/home/like/<%= post._id %>" class="like-button flex items-center px-4 py-2 rounded-lg text-sm font-medium <%= post.like.indexOf(user.userid) == -1 ? 'text-blue-600 hover:text-blue-700' : 'text-pink-500 hover:text-pink-600' %>">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="<%= post.like.indexOf(user.userid) == -1 ? 'none' : 'currentColor' %>" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              <%= post.like.indexOf(user.userid) == -1 ? "Like" : "Unlike" %>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
  <script>
    // Add staggered animation for posts
    document.addEventListener('DOMContentLoaded', function() {
      const posts = document.querySelectorAll('.post-appear');
      
      posts.forEach((post, index) => {
        post.style.opacity = '0';
        setTimeout(() => {
          post.classList.add('animate__animated', 'animate__fadeInUp');
          post.style.opacity = '1';
        }, index * 150);
      });
    });
  </script>
</body>
</html>