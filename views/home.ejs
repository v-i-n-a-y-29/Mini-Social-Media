<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Social - Feed</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    
    body {
      font-family: 'Poppins', sans-serif;
    }
    
    .gradient-bg {
      background: linear-gradient(to right, #111827, #1f2937);
    }
    
    .btn-primary {
      transition: all 0.3s ease;
      background: linear-gradient(to right, #3B82F6, #2563EB);
      box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.4);
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 10px -1px rgba(59, 130, 246, 0.5);
    }
    
    .btn-danger {
      transition: all 0.3s ease;
      background: linear-gradient(to right, #EF4444, #DC2626);
      box-shadow: 0 4px 6px -1px rgba(239, 68, 68, 0.4);
    }
    
    .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 10px -1px rgba(239, 68, 68, 0.5);
    }
    
    .card {
      backdrop-filter: blur(16px) saturate(180%);
      background-color: rgba(31, 41, 55, 0.75);
      border-radius: 12px;
      border: 1px solid rgba(255, 255, 255, 0.125);
      box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
      transition: all 0.3s ease;
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px 0 rgba(0, 0, 0, 0.5);
    }
    
    .post-appear {
      animation: fadeInUp 0.6s ease-out forwards;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .like-button {
      transition: all 0.2s ease;
    }
    
    .like-button:hover {
      transform: scale(1.1);
    }
    
    .like-count {
      transition: all 0.3s ease;
    }
  </style>
</head>
<body class="gradient-bg min-h-screen text-white p-6">
  <div class="max-w-4xl mx-auto animate__animated animate__fadeIn">
    <div class="flex justify-between items-center mb-8 p-4 card animate__animated animate__slideInDown">
      <h1 class="text-2xl md:text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-blue-600">
        Mini Social Feed
      </h1>
      <div class="flex space-x-3">
        <a href="/profile" class="btn-primary px-4 py-2 rounded-lg text-sm font-medium animate__animated animate__fadeIn">Profile</a>
        <a href="/logout" class="btn-danger px-4 py-2 rounded-lg text-sm font-medium animate__animated animate__fadeIn animate__delay-1s">Logout</a>
      </div>
    </div>
    
    <div class="posts space-y-6">
      <% posts.forEach(function(post, index) { %>
        <div class="card p-5 post-appear" style="animation-delay: <%= index * 0.1 %>s;">
          <div class="flex items-center mb-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white font-bold">
              <%= post.user.username.charAt(0).toUpperCase() %>
            </div>
            <div class="ml-3">
              <h3 class="text-lg font-semibold text-blue-400">@<%= post.user.username %></h3>
            </div>
          </div>
          
          <p class="text-gray-200 text-lg mb-4 leading-relaxed"><%= post.content %></p>
          
          <div class="flex items-center justify-between mt-2 pt-3 border-t border-gray-700">
            <div class="flex items-center space-x-2">
              <span class="like-count bg-gray-800 px-3 py-1 rounded-full text-sm">
                <%= post.like.length %> likes
              </span>
            </div>
            <a href="/home/like/<%= post._id %>" class="like-button flex items-center px-3 py-1 rounded-lg text-sm <%= post.like.indexOf(user.userid) == -1 ? 'text-blue-400 hover:text-blue-300' : 'text-pink-500 hover:text-pink-400' %>">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="<%= post.like.indexOf(user.userid) == -1 ? 'none' : 'currentColor' %>" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              <%= post.like.indexOf(user.userid) == -1 ? "Like" : "Unlike" %>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
  <script>
    // Staggered animation for posts
    document.addEventListener('DOMContentLoaded', function() {
      const posts = document.querySelectorAll('.post-appear');
      
      posts.forEach((post, index) => {
        setTimeout(() => {
          post.classList.add('animate__animated', 'animate__fadeInUp');
        }, index * 150);
      });
    });
  </script>
</body>
</html>