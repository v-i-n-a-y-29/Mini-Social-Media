<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <div class="flex justify-between mb-4">
      <a href="/profile" class="bg-blue-500 px-4 py-2 rounded-md text-sm mr-2">Profile</a>
      <a href="/logout" class="bg-red-500 px-4 py-2 rounded-md text-sm">Logout</a>
    </div>
    <h1 class="text-3xl tracking-tighter mb-8">All Posts</h1>
    <div class="posts">
      <% posts.forEach(function(post) { %>
        <div class="post border-2 border-zinc-700 w-1/3 p-4 rounded-md bg-zinc-800 mt-4">
          <h1 class="text-blue-500">@<%= post.user.username %></h1>
          <p class="tracking-tight mb-2"><%= post.content %></p>
          <div class="flex gap-4 text-sm">
            <span class="text-zinc-400">Likes: <%= post.like.length %></span>
            <a href="/home/like/<%= post._id %>" class="text-blue-500"><%=post.like.indexOf(user.userid) ==-1?"Like":"UnLike" %></a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>